<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F39532"
    tools:context=".ForgotpassFragment">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:src="@drawable/logo1" />
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="FORGOT YOUR PASSWORD?"
            android:layout_marginTop="35dp"
            android:textSize="22sp"
            android:textColor="@color/orenge_button"/>

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="75dp"
            android:maxLines="3"
            android:text="Don't worry!Just fill in your email and we'll send you a link to reset your password."
            android:textAlignment="center"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/edit_restPassEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Email Address"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:layout_marginTop="155dp"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_frgtPass"
            android:layout_width="250dp"
            android:layout_height="46dp"
            android:text="RECOVER PASSWORD"
            android:background="@drawable/btn_style"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="215dp"
            android:textColor="@color/White"/>
        <TextView
            android:id="@+id/txt_frgtLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="265dp"
            android:textColor="@color/orenge_button"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>