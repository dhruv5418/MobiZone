<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/order_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/prod" />

            <TextView
                android:id="@+id/order_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Iphone 11Pro Max"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/order_img"
                app:layout_constraintTop_toTopOf="parent" />




            <TextView
                android:id="@+id/txt_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="1444 rue Mackay"
                android:textColor="@color/Black"
                android:layout_marginStart="16dp"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@+id/order_img"
                app:layout_constraintTop_toBottomOf="@+id/order_quantity"
                />
            <TextView
                android:id="@+id/txt_apt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="#403"
                android:textColor="@color/Black"
                android:layout_marginStart="16dp"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@+id/order_img"
                app:layout_constraintTop_toBottomOf="@+id/txt_add"
                />
            <TextView
                android:id="@+id/txt_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Montreal"
                android:textColor="@color/Black"
                android:layout_marginStart="16dp"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@+id/txt_apt"
                app:layout_constraintTop_toBottomOf="@+id/txt_add"
                />
            <TextView
                android:id="@+id/txt_province"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="QC"
                android:textColor="@color/Black"
                android:layout_marginStart="16dp"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@+id/order_img"
                app:layout_constraintTop_toBottomOf="@+id/txt_apt"
                />
            <TextView
                android:id="@+id/txt_postal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="H3G2H9"
                android:textColor="@color/Black"
                android:layout_marginStart="16dp"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@+id/txt_province"
                app:layout_constraintTop_toBottomOf="@+id/txt_city"
                />

            <TextView
                android:id="@+id/order_quantity"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:backgroundTint="@color/Black"
                android:textSize="17sp"
                android:text="Qty:1"
                android:textColor="@color/Black"
                app:layout_constraintStart_toEndOf="@+id/order_img"
                app:layout_constraintTop_toBottomOf="@+id/order_name" />
            <TextView
                android:id="@+id/order_price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:backgroundTint="@color/Black"
                android:textSize="17sp"
                android:text="$ 1200"
                android:textColor="@color/Black"
                app:layout_constraintStart_toEndOf="@+id/order_quantity"
                app:layout_constraintTop_toBottomOf="@+id/order_name" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>









</androidx.constraintlayout.widget.ConstraintLayout>